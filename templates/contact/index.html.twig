{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!
{% endblock %}

{% block body %}
	<style>
		.button {
			background-color: #007bff;
			color: #fff;
			padding: 15px 20px;
			border: none;
			border-radius: 5px;
			cursor: pointer;
			font-size: 16px;
			transition: background-color 0.3s ease-in-out;
		}

		.button:hover {
			background-color: #0056b3;
		}
	</style>
	<section class="paralax-mf footer-paralax bg-image sect-mt4 route" style="background-image: url(img/overlay-bg.jpg)">
		<div class="overlay-mf"></div>
		<div class="container">
			<div class="row">
				<div class="col-sm-12">
					<div class="contact-mf">
						<div id="contact" class="box-shadow-full">
							<div class="row">
								<div class="col-md-6">
									<div class="title-box-2">
										<h5 class="title-left">
											Send Message
										</h5>
									</div>
									<div>
										<form action="" method="post" role="form" class="contactForm">
											<div id="errormessage"></div>
											<div class="row">
												<div class="col-md-12 mb-3">
													<div class="form-group">
														<input type="email" class="form-control" name="destinataire_email" id="email" placeholder="Ã€" data-rule="email" data-msg="Please enter a valid email"/>
														<div class="validation"></div>
													</div>
												</div>

												<div class="col-md-12 mb-3">
													<div class="form-group">
														<textarea class="form-control" name="user_message" rows="5" data-rule="required" data-msg="Please write something for us" placeholder="Message"></textarea>
														<div class="validation"></div>
													</div>
												</div>
												<div class="col-md-12">
													<button type="submit" class="button button-a button-big button-rouded">Send Message</button>
												</div>
											</div>
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
